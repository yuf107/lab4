			<h4>Event name:</h4>
			<input name="name" value="{{name}}"></input>
			<input name="original" value="{{name}}" hidden {{readonly}}></input>

			<h4>Importance:</h4>
                        <select name="importance" value="{{importance}}">
                                <option value="31">One Star</option>
                                <option value="48">Two Star</option>
                                <option value="65">Three Star</option>
                        </select>

			<div><h4></div>			

			<h4 style="display:inline">This is a happy event:</h4>
			<input type="checkbox" name="happy">

			<h4>Comments:</h4>
			<input name="comment" value="{{comment}}"></input>	
			<h4>Date:</h4>
			<input type="date" name="date" value="{{date}}"></input>
			<h4>Time:</h4>
			<input type="time" name="timeFrom" value="{{timeFrom}}"></input>
			to
			<input type="time" name="timeTo" value="{{timeTo}}"></input>
			<h4>Location:</h4>
			<input name="place" value="{{place}}"></input>
		</br>

			<div><h3>
			</h3></div>

		<div style="text-align:center;">
		<input type="submit" id="submit" class="btn btn-default" value="{{edit}}" style="width:80%"></input> <!-- One button switch text -->
		</form>	
	

		<form action="{{delete}}" style="display:inline"> 
			<input name="name" value="{{name}}" hidden readonly>
			</input>
			<input type="submit" class="btn btn-default" value="Delete" style="width:80%"></input>
		</form>
		
		</div>
